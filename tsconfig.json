{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "config/*": ["./config/*"],
      "lib/*": ["./lib/*"],
      "vendor/*": ["./vendor/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["main.ts", "src/**/*.ts", "config/**/*.ts", "lib/**/*.ts", "vendor/**/*.ts"],
  "exclude": ["node_modules"],
  "preferences": {
    "importModuleSpecifierPreference": "non-relative"
  }
}
